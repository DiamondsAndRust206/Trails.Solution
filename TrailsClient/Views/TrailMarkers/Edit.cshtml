@{
  Layout = "_Layout";
}

@model TrailsClient.Models.TrailMarker


<h1>Edit Trail Markers:</h1>

@using (Html.BeginForm())
{
  <div class="settings">
    @Html.HiddenFor(model => model.TrailMarkerId)

    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)

    @Html.LabelFor(model => model.Longitude)
    @Html.TextBoxFor(model => model.Longitude, new { type="number" })

    @Html.LabelFor(model => model.Latitude)
    @Html.TextBoxFor(model => model.Latitude, new { type="number" })

    @Html.LabelFor(model => model.Description)
    @Html.TextBoxFor(model => model.Description)
  </div>

  <input class = "btn btn-secondary" type="submit" value="update character"/>
}

<a href="/TrailMarkers/Details/@(Model.TrailMarkerId)"><p>Return to Details</p></a>